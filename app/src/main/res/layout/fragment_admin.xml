<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.OBNdula.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="70dp"
            android:hint="Product Name"
            android:textColorHint="#383D5A"
            android:padding="15dp"
            android:id="@+id/product_name"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product description"
            android:textColorHint="#383D5A"
            android:id="@+id/description"
            android:padding="15dp"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="price"
            android:textSize="20dp"
            android:id="@+id/price"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Item Id"
            android:textSize="20dp"
            android:id="@+id/itemId"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autofillHints="product image"
                android:background="#35666C"
                android:id="@+id/image"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD IMAGE"
                android:id="@+id/addimage"/>


        </LinearLayout>
            <Button
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:id="@+id/addtodatabase"
                android:layout_gravity="center"
                android:text="Add product to Database"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orhomepage"
            android:text="Go to homepage"
            android:textColor="#7C0B0B"
            android:textSize="20dp"/>

    </LinearLayout>



</RelativeLayout>